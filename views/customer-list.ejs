<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <!-- CSS Stylesheet -->
    <link rel="stylesheet" type="text/css" href="/styles/site.css">

    <!--Font Family-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('../partials/_header.ejs') %> <!--Header-->
 
    <div id="container">

        <div class="textCard">     
            <div class="card">   <!-- Welcome Message card -->
                
                <div class="card-content" style="border-bottom: 8px solid #00b4d8; border-top: 8px solid black;">
                    <h2>Welcome to Pets-R-Us <br> The one-stop-shop for all of your pet care needs. </h2>
                </div>        
            </div>            
        </div> 
        
        <br>

<!-- Contains table that displays registered customers -->

        <div class="textCard">    
            <div class="card">   
                
                <div class="card-title"> Customer List </div><br>

                <div class="card-content">
                    <% if(customer.length > 0) { %>
                    <table class="table">
                        <tr>
                            <th>Customer ID</th>
                            <th>Email</th>
                        </tr>
                        <tbody>
<!-- Iterates over the customers collection-->                            
                        <% customer.forEach(function(customer) { %>
                        <tr>
<!-- Displays the customer ID and email data-->                            
                            <td>
                                <%= customer.customerID %>
                            </td>
                            <td>
                                <%= customer.email %>
                            </td>
                            
                        </tr>
                        <% }) %>
                        </tbody>
                    </table>
<!-- Displays in the event there are no registered customers-->                    
                    <% } else { %>
                    <h3>Customers have not been added to the MongoDB database. Try adding some!</h3>
                    <% } %>
                </div>        
            </div>            
        </div>     
    </div>



    <%- include('../partials/_footer.ejs') %>    <!--Footer-->
</body>
</html>